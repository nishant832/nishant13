#include <iostream>
#include <vector>
#include <limits>
struct S{char n[50];int id;float g;};void a(std::vector<S>&r){S s;std::cout<<"N:";std::cin.ignore(std::numeric_limits<std::streamsize>::max(),'\n');std::cin.getline(s.n,50);std::cout<<"ID:";std::cin>>s.id;std::cout<<"G:";std::cin>>s.g;r.push_back(s);std::cout<<"Ok\n";}void d(const std::vector<S>&r){if(r.empty()){std::cout<<"Empty\n";return;}std::cout<<"\nRecs:\n";for(const auto&s:r)std::cout<<"N:"<<s.n<<"\nID:"<<s.id<<"\nG:"<<s.g<<"\n---\n";}void srch(const std::vector<S>&r){if(r.empty()){std::cout<<"Empty\n";return;}int i;std::cout<<"ID:";std::cin>>i;for(const auto&s:r)if(s.id==i){std::cout<<"\nFound:\nN:"<<s.n<<"\nID:"<<s.id<<"\nG:"<<s.g<<"\n---\n";return;}std::cout<<"Not found\n";}int main(){std::vector<S>r;int c;do{std::cout<<"\nMenu:\n1. Add\n2. Disp\n3. Search\n4. Exit\n>";std::cin>>c;switch(c){case 1:a(r);break;case 2:d(r);break;case 3:srch(r);break;case 4:std::cout<<"Bye\n";break;default:std::cout<<"Invalid\n";}}while(c!=4);return 0;}
